<Page x:Class="VRCOSC.App.Pages.Router.RouterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="clr-namespace:VRCOSC.App.UI"
      xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:fa6="http://schemas.fontawesome.com/icons/fonts"
      mc:Ignorable="d">
    <Page.Resources>
        <ui:AlternatingColourConverter x:Key="AlternatingColourConverter" Colour1="{StaticResource CBackground3}"
                                       Colour2="{StaticResource CBackground4}" />
    </Page.Resources>
    <Grid>
        <ui:MouseScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <Border Background="{StaticResource CBackground2}" Padding="10">
                <Border Background="Transparent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="55" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Background="{StaticResource CBackground1}"
                                Padding="7 5" CornerRadius="5 5 0 0">
                            <Grid>
                                <TextBlock
                                    Text="Router"
                                    Foreground="{StaticResource CForeground1}"
                                    FontSize="20"
                                    VerticalAlignment="Top"
                                    FontWeight="DemiBold"/>
                                <TextBlock
                                    Text="This will forward all VRChat OSC data to the specified address and port for apps to receive on. Apps should still send to port 9000"
                                    Foreground="{StaticResource CForeground2}"
                                    FontSize="15"
                                    VerticalAlignment="Bottom"/>
                            </Grid>
                        </Border>
                        <ListView Grid.Row="1" ItemsSource="{Binding RouterManager.Routes, Mode=OneWay}"
                                  HorizontalAlignment="Stretch"
                                  Background="Transparent"
                                  BorderThickness="0" AlternationCount="2" Padding="-1">
                            <b:Interaction.Behaviors>
                                <ui:IgnoreMouseWheelBehavior />
                            </b:Interaction.Behaviors>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate>
                                                <Grid>
                                                    <Border
                                                        Background="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(ItemsControl.AlternationIndex), Converter={StaticResource AlternatingColourConverter}}"
                                                        Padding="5" Height="40">
                                                        <Grid>
                                                            <ui:SpacedStackPanel
                                                                Orientation="Horizontal"
                                                                Spacing="5"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Stretch">
                                                                <TextBlock Text="Name:"
                                                                           Foreground="{StaticResource CForeground1}"
                                                                           FontSize="16"
                                                                           VerticalAlignment="Center"/>
                                                                <TextBox
                                                                    Text="{Binding Name.Value}"
                                                                    Foreground="{StaticResource CForeground1}"
                                                                    Height="20"
                                                                    Width="100"
                                                                    FontSize="16"
                                                                    VerticalAlignment="Center"
                                                                    VerticalContentAlignment="Center" />
                                                                <TextBlock Text="Address:"
                                                                           Foreground="{StaticResource CForeground1}"
                                                                           FontSize="16"
                                                                           VerticalAlignment="Center"/>
                                                                <ui:IPTextBox
                                                                    Text="{Binding Address.Value}"
                                                                    Foreground="{StaticResource CForeground1}"
                                                                    Height="20"
                                                                    Width="100"
                                                                    FontSize="16"
                                                                    VerticalAlignment="Center"
                                                                    VerticalContentAlignment="Center" />
                                                                <TextBlock Text="Port:"
                                                                           Foreground="{StaticResource CForeground1}"
                                                                           FontSize="16"
                                                                           VerticalAlignment="Center"/>
                                                                <TextBox
                                                                    Text="{Binding Port.Value}"
                                                                    Foreground="{StaticResource CForeground1}"
                                                                    Height="20"
                                                                    Width="100"
                                                                    FontSize="16"
                                                                    VerticalAlignment="Center"
                                                                    VerticalContentAlignment="Center" />
                                                            </ui:SpacedStackPanel>
                                                            <ui:SpacedStackPanel
                                                                Orientation="Horizontal"
                                                                FlowDirection="RightToLeft"
                                                                Spacing="7"
                                                                HorizontalAlignment="Right">
                                                                <ui:VRCOSCButton
                                                                    ButtonColour="Red"
                                                                    Width="30" Height="30"
                                                                    Tag="{Binding}"
                                                                    Click="RemoveInstance_OnClick">
                                                                    <fa6:ImageAwesome
                                                                        Icon="Solid_Minus"
                                                                        PrimaryColor="{StaticResource CForeground1}"
                                                                        Margin="5"/>
                                                                </ui:VRCOSCButton>
                                                            </ui:SpacedStackPanel>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <Border Grid.Row="2" Background="{StaticResource CBackground1}"
                                CornerRadius="0 0 5 5">
                            <ui:VRCOSCButton ButtonColour="Green" Height="25" Width="100" CornerRadius="5"
                                             Click="AddInstance_OnClick">
                                <fa6:ImageAwesome Icon="Solid_Plus" Margin="5"
                                                 PrimaryColor="{StaticResource CForeground1}" />
                            </ui:VRCOSCButton>
                        </Border>
                    </Grid>
                </Border>
            </Border>
        </ui:MouseScrollViewer>
    </Grid>
</Page>
