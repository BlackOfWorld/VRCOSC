<UserControl x:Class="VRCOSC.App.UI.Views.Run.Tabs.ChatBoxView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:ui="clr-namespace:VRCOSC.App.UI"
      xmlns:core="clr-namespace:VRCOSC.App.UI.Core"
      mc:Ignorable="d">
    <Grid>
        <Border Name="ChatBoxContainer" Padding="30 10" CornerRadius="15" Background="#27272c" HorizontalAlignment="Center"
                VerticalAlignment="Center" Visibility="Collapsed">
            <TextBlock Name="ChatBoxText" FontSize="30" Foreground="White"
                       TextAlignment="Center" TextWrapping="Wrap" MaxWidth="435" />
        </Border>
        <core:IconButton Icon="Solid_ArrowUpRightFromSquare" Width="35" Height="35" HorizontalAlignment="Right"
                       ButtonColour="Gray"
                       VerticalAlignment="Top" Margin="10" Click="PopoutChatBox_OnClick"/>
    </Grid>
</UserControl>
