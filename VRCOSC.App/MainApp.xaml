<Application x:Class="VRCOSC.App.MainApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:core="clr-namespace:VRCOSC.App.UI.Core">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="UI/Themes/Light.xaml" />
                <ResourceDictionary Source="UI/Themes/Dark.xaml" />
                <ResourceDictionary Source="UI/Styles/VRCOSCCheckBoxStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/VRCOSCButtonStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/IconButtonStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/TextBoxStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/HeaderFooterListViewStyle.xaml" />
                <ResourceDictionary Source="UI/Styles/SpacedListView.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="{x:Type core:IPPortTextBox}" BasedOn="{StaticResource {x:Type TextBox}}" />
            <Style TargetType="{x:Type ScrollViewer}">
                <Setter Property="PanningMode" Value="VerticalOnly" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>